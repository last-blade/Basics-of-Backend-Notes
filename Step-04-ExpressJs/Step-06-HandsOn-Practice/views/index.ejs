<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="POST">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-lg outline-none" type="text" placeholder="Title" name="title">
                <textarea class="block mt-2 px-5 py-2 bg-zinc-800 resize-none w-full rounded-lg outline-none" placeholder="Write any description" name="description"></textarea>
                <input type="submit" value="Create Task" class="mt-2 bg-blue-600 rounded-md p-2 cursor-pointer">
            </form>
        </div>
        <div class="task-cards p-10 flex gap-3 flex-wrap">
            <% if(files.length > 0){ %>
                <% files.forEach(function(value){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-800 rounded-md shadow-xl">
                        <h1 class="text-2xl tracking-tighter text-white"><%= value %></h1>
                        <div class="mt-3 flex justify-between items-center w-full">
                            <a href="/task/<%= value %>" class="text-blue-500 inline-block border-b-2 border-blue-500">Read more</a>
                            <a href="/edit/<%= value %>" class="text-zinc-600 hover:underline">edit name</a>
                        </div>
                    </div>
               <% }) %>
            <% } else{ %>
                <h1 class="text-zinc-600">No tasks yet</h1>
            <% } %>
        </div>
    </div>
</body>
</html>